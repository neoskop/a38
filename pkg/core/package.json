{
    "name": "@a38/core",
    "version": "0.0.2",
    "exports": {
        ".": {
            "bun": "./src/index.ts",
            "require": "./libs/index.js",
            "import": "./lib/index.mjs",
            "types": "./src/index.ts"
        }
    },
    "main": "./lib/index.js",
    "module": "./lib/index.mjs",
    "types": "./src/index.ts",
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --out-dir lib",
        "lint": "biome lint .",
        "lint:changed": "biome check . --changed --no-errors-on-unmatched",
        "lint:staged": "biome check . --staged --no-errors-on-unmatched --write",
        "test": "bun test",
        "test:coverage": "bun test --coverage",
        "test:watch": "bun test --watch"
    },
    "devDependencies": {
        "@a38/biome-config": "0.0.1",
        "@a38/tsconfig": "0.0.1",
        "@a38/typedoc": "0.0.1",
        "@types/node": "20.16.3",
        "typescript": "5.5.4"
    }
}
